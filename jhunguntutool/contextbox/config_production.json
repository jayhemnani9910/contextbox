{
  "profile": "production",
  "debug": false,
  "data_directory": "/opt/contextbox/data",
  "temp_directory": "/var/tmp/contextbox",
  "database": {
    "path": "/opt/contextbox/data/contextbox.db",
    "backup_enabled": true,
    "backup_interval": 12,
    "backup_retention": 30,
    "auto_vacuum": true,
    "cache_size": 5000,
    "timeout": 60,
    "max_retries": 5,
    "connection_pool_size": 10
  },
  "capture": {
    "screenshot_enabled": true,
    "screenshot_format": "png",
    "screenshot_quality": 90,
    "auto_screenshot": true,
    "screenshot_interval": 5,
    "clipboard_monitor": false,
    "active_window_capture": true,
    "extract_text_automatically": true,
    "extract_urls_automatically": true,
    "artifact_retention": 7,
    "compression_enabled": true,
    "max_screenshot_size": 5
  },
  "content_extraction": {
    "enabled": true,
    "extract_urls": true,
    "extract_text": true,
    "extract_images": false,
    "ocr_enabled": false,
    "ocr_languages": ["eng"],
    "ocr_min_confidence": 80,
    "url_timeout": 15,
    "max_url_content_length": 50000,
    "store_extracted_content": true,
    "extract_metadata": true,
    "follow_redirects": true,
    "respect_robots_txt": true,
    "rate_limit_delay": 2.0
  },
  "llm": {
    "provider": "openai",
    "api_key": null,
    "api_base": null,
    "model": "gpt-4",
    "max_tokens": 3000,
    "temperature": 0.3,
    "timeout": 120,
    "retry_attempts": 5,
    "local_model_path": null,
    "embedding_model": "text-embedding-ada-002"
  },
  "logging": {
    "level": "WARNING",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_enabled": true,
    "file_path": "/var/log/contextbox/contextbox.log",
    "file_max_size": 50,
    "file_backup_count": 10,
    "console_enabled": false,
    "structured_logging": true,
    "log_to_database": true
  },
  "ui": {
    "theme": "dark",
    "language": "en",
    "auto_start": true,
    "minimize_to_tray": false,
    "show_notifications": false,
    "window_geometry": {
      "width": 1920,
      "height": 1080,
      "x": 0,
      "y": 0
    },
    "last_opened_tab": "dashboard"
  },
  "security": {
    "encrypt_database": true,
    "encrypt_artifacts": true,
    "api_key_encryption": true,
    "audit_logging": true,
    "session_timeout": 1800,
    "max_file_size": 50,
    "allowed_file_types": [
      ".txt", ".json", ".csv", ".png", ".jpg", ".pdf"
    ],
    "scan_for_malware": true
  },
  "version": "1.0",
  "created_at": "2025-11-05T04:44:11",
  "updated_at": "2025-11-05T04:44:11"
}